{
    "version": 3,
    "configurePresets": [
        {
            "name": "mingw-preset",
            "displayName": "MinGW Preset",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/mingw"
        },

        {
            "name": "msvc-x64",
            "displayName": "MSVC 64-bit Preset",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }         
        },

        {
            "name": "vs-ninja-x64-debug",
            "displayName": "Ninja Build 64-bit for Visual Studio",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],

    "buildPresets": [
        {
            "name": "mingw-build-debug-preset",
            "displayName":"MinGW Debug Build Preset",
            "configurePreset": "mingw-preset",
            "configuration": "Debug",
            "jobs": 8
        },

        {
            "name": "mingw-build-release-preset",
            "displayName":"MinGW Release Build Preset",
            "configurePreset": "mingw-preset",
            "configuration": "Release",
            "jobs": 8
        },

        {
            "name": "vs-ninja-x64-debug-build",
            "configurePreset": "vs-ninja-x64-debug",
            "jobs": 8
        }
        
    ]
}