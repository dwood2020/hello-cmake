{
    "version": 3,
    "configurePresets": [
        {
            "name": "mingw-preset",
            "displayName": "MinGW Preset",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/mingw"
        },

        {
            "name": "msvc-x64-preset",
            "displayName": "MSVC 64-bit Preset",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/build/msvc-x64",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            }
        }
    ],

    "buildPresets": [
        {
            "name": "mingw-build-debug-preset",
            "displayName":"MinGW Debug Build Preset",
            "configurePreset": "mingw-preset",
            "configuration": "Debug",
            "jobs": 8
        },

        {
            "name": "mingw-build-release-preset",
            "displayName":"MinGW Release Build Preset",
            "configurePreset": "mingw-preset",
            "configuration": "Release",
            "jobs": 8
        }
        
    ]
}